<header>
  <nav class="navbar navbar-expand-md navbar-light bg-light shadow-sm fixed-top">
    <div class="container d-flex justify-content-between align-items-center">

      <!-- 左：ハンバーガーメニュー -->
      <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarMenu"
        aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- タイトル -->
      <%= link_to "PlayMap", root_path, class: "navbar-brand font-weight-bold mb-0 ml-2" %>

      <!-- 右：虫眼鏡アイコン -->
      <button class="btn btn-link text-dark p-0 ml-3" id="searchToggle">
        <i class="fas fa-search fa-lg"></i>
      </button>

      <!-- ハンバーガーメニューの中身 -->
      <div class="collapse navbar-collapse" id="navbarMenu">
        <ul class="navbar-nav ml-3">
          <% if current_user %>
            <li class="nav-item">
              <%= link_to mypage_path, class: "nav-link" do %>
                <i class="fas fa-user mr-1"></i> マイページ
              <% end %>
            </li>
            <li class="nav-item">
            <%= link_to notifications_path, class: "nav-link" do %>
              <i class="fa fa-bell"></i>
              <% if current_user.passive_notifications.unchecked.any? %>
                 <span class="badge"><%= current_user.passive_notifications.unchecked.count %></span>
              <% end %>
            <% end %>
            </li>
            <li class="nav-item">
              <%= link_to posts_path, class: "nav-link" do %>
                <i class="fas fa-list mr-1"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to reviews_path, class: "nav-link" do %>
                <i class="fas fa-star me-1"></i> レビューリスト
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to places_path, class: "nav-link" do %>
                <i class="fas fa-map-marker-alt me-1"></i> 場所一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to events_path, class: "nav-link" do %>
                <i class="fas fa-calendar-alt me-1"></i> イベント一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-danger" do %>
                <i class="fas fa-sign-out-alt mr-1"></i> ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: "btn btn-outline-primary mr-2" do %>
                <i class="fas fa-user-plus mr-1"></i> 新規登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: "btn btn-outline-primary" do %>
                <i class="fas fa-sign-in-alt mr-1"></i> ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- 検索フォーム（初期非表示） -->
  <div id="searchFormWrapper" class="bg-light px-3 py-2 shadow-sm d-none position-fixed w-100" style="top: 56px; z-index: 1050;">
    <%= render 'public/shared/search_form' %>
  </div>
</header>