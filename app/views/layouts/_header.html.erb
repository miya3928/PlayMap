      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <!-- ナビゲーションメニュー -->
      <div class="collapse navbar-collapse justify-content-end" id="navbarMenu">
        <ul class="navbar-nav me-auto">
        <!-- 検索フォーム -->
        <div>
        <%= render 'public/shared/search_form' %>
        </div>
          <% if current_user && current_user.guest? %>
            <li class="nav-item">
              <%= link_to posts_path, class: "nav-link" do %>
                <i class="fas fa-pencil-alt me-1"></i></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to reviews_path, class: "nav-link" do %>
                <i class="fas fa-star me-1"></i> レビューリスト
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-danger" do %>
                <i class="fas fa-sign-out-alt me-1"></i> ログアウト
              <% end %>
            </li>
          <% elsif current_user %>
            <li class="nav-item">
              <%= link_to mypage_path, class: "nav-link" do %>
                <i class="fas fa-user me-1"></i> マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to posts_path, class: "nav-link" do %>
                <i class="fas fa-list me-1"></i> 投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to places_path, class: "nav-link" do %>
                <i class="fas fa-map-marker-alt me-1"></i> 場所一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to events_path, class: "nav-link" do %>
                <i class="fas fa-calendar-alt me-1"></i> イベント一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to reviews_path, class: "nav-link" do %>
                <i class="fas fa-star me-1"></i> レビューリスト
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_post_path, class: "nav-link", data: {turbolinks: "false"} do %>
                <i class="fa-regular fa-pen-to-square"></i> 新規投稿
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-danger" do %>
                <i class="fas fa-sign-out-alt me-1"></i> ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to about_path, class: "nav-link" do %>
                <i class="fas fa-info-circle me-1"></i> About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: "btn btn-outline-primary me-2" do %>
                <i class="fas fa-user-plus me-1"></i> 新規登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: "btn btn-outline-primary me-2" do %>
                <i class="fas fa-sign-in-alt me-1"></i> ログイン
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_guest_sign_in_path, class: "btn btn-outline-secondary", method: :post do %>
                <i class="fas fa-user-secret me-1"></i> ゲストログイン
              <% end %>
            </li>
          <% end %>
