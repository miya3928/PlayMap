<div class="container my-5 pt-5">
  <h2 class="text-center text-primary fw-bold mb-4">ブックマーク一覧</h2>

  <!-- Places -->
  <h3 class="text-primary mt-4"><i class="fas fa-map-marker-alt mr-1"></i>場所</h3>
  <% if @places.any? %>
    <div class="row">
      <% @places.each do |place| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= link_to place.name, place_path(place) %></h5>
              <p class="text-muted"><%= truncate(place.description, length: 50) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">ブックマークした場所はありません。</p>
  <% end %>

  <!-- Events -->
  <h3 class="text-primary mt-5"><i class="fas fa-calendar mr-1"></i>イベント</h3>
  <% if @events.any? %>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= link_to event.title, event_path(event) %></h5>
              <p class="text-muted"><%= truncate(event.body, length: 50) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">ブックマークしたイベントはありません。</p>
  <% end %>

  <!-- Posts -->
  <h3 class="text-primary mt-5"><i class="fas fa-pencil-alt mr-1"></i>投稿</h3>
  <% if @posts.any? %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
              <p class="text-muted"><%= truncate(post.body, length: 50) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">ブックマークした投稿はありません。</p>
  <% end %>

  <!-- Reviews -->
  <h3 class="text-primary mt-5"><i class="fas fa-star mr-1"></i>レビュー</h3>
  <% if @reviews.any? %>
    <div class="row">
      <% @reviews.each do |review| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <%= render 'public/reviews/display', review: review %>
              <p class="text-muted mt-2"><%= truncate(review.body, length: 50) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">ブックマークしたレビューはありません。</p>
  <% end %>

</div>