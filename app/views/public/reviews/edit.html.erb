<div class="container my-5">
  <div class="card shadow-sm">
    <div class="card-body p-4">
      <div id="review-form" class="review-form">
        <h1 class="card-title h3 mb-4 text-center text-primary fw-bold">レビュー編集</h1>

        <!-- 以前の評価 -->
        <div class="mb-4">
          <h5 class="text-muted fw-bold mb-2">⭐ 以前の評価</h5>
          <div class="border rounded p-3 bg-light">
            <%= render 'public/reviews/display', review: @review %>
          </div>
        </div>

        <!-- 投稿概要 -->
        <div class="mb-4">
          <%= render 'public/posts/summary', post: @post %>
        </div>

        <h4 class="mb-3 fw-bold">✏️ 編集してください</h4>

        <%= form_with model: [@review.post, @review], local: true do |f| %>
          <!-- 評価 -->
          <div id="review-score-form" class="mb-4"
              data-score="<%= @review.score || 0 %>"
              data-star-on="<%= asset_path('star-on.png') %>"
              data-star-off="<%= asset_path('star-off.png') %>"
              data-star-half="<%= asset_path('star-half.png') %>">
          </div>
          <%= f.hidden_field :score, id: "score-input" %>

          <!-- レビュー本文 -->
          <div class="mb-4">
            <%= f.label :body, "レビュー内容", class: "form-label fw-bold" %>
            <%= f.text_area :body, class: "form-control", rows: 5 %>
          </div>

          <!-- ボタン -->
          <div class="text-end">
            <%= f.submit "更新する", class: "btn btn-success me-2 px-4" %>
            <%= link_to "キャンセル", post_review_path(@review.post, @review), class: "btn btn-outline-secondary px-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>