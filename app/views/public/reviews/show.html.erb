<div class="container my-5">
  <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
    <div class="card-body p-md-5">

      <h2 class="text-success fw-bolder mb-5 border-bottom pb-3"><i class="fas fa-star me-2"></i> レビュー詳細</h2>

      <%= render 'public/reviews/detail', review: @review, post: @post %>
        
      <div class="mt-5 pt-4 border-top">
        <h3 class="text-info fw-bold mb-4"><i class="fas fa-comment me-2"></i> コメントする</h3>

        <div class="p-4 bg-light rounded-lg shadow-sm mb-5">
          <%= render 'public/comments/form', commetable: @review %>
        </div>

        <h4 class="text-secondary fw-bold mb-3"><i class="fas fa-comments me-2"></i> みんなのコメント</h4>
        <%= render 'public/comments/lists', commetable: @review %>
      </div>

    </div>
  </div>
</div>