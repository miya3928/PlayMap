<% flash.each do |key, message| %>
  <div class="alert message alert-<%= key == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show shadow-sm" role="alert">
    <%= message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>