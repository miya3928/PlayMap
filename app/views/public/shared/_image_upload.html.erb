<!-- f: formオブジェクト, field_name: シンボル（:image など）, preview_id: プレフィックスID（例: 'post_image'） -->
<div class="mb-3 d-flex flex-column align-items-start">
  <!-- 画像選択ボタン -->
  <label for="<%= preview_id %>" class="btn btn-outline-secondary">
    <i class="fa-solid fa-image me-1"></i> 画像を選択
  </label>

  <!-- 実際のファイルフィールド -->
  <%= f.file_field field_name, accept: "image/*", id: preview_id, class: "d-none" %>

  <!-- プレビュー表示 -->
  <img id="<%= preview_id %>_preview" class="img-fluid mt-3 rounded shadow-sm d-none" style="max-height: 200px;">
</div>