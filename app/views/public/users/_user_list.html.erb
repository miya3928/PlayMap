<% if users.present? %>
  <div class="row">
    <% users.each do |user| %>
      <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow border-0 rounded hover-shadow-sm position-relative">
          <div class="card-body d-flex align-items-start">
            <!-- プロフィール画像 -->
            <%= link_to user_path(user), class: "mr-3" do %>
              <%= display_image_or_default(user.image, classes: "rounded-circle border border-2 shadow-sm", width: 64, height: 64) %>
            <% end %>

            <!-- ユーザー情報 -->
            <div class="flex-grow-1">
              <h5 class="font-weight-bold mb-1">
                <%= link_to user.name, user_path(user), class: "text-primary" %>
              </h5>
              <p class="text-muted small mb-3">
                <%= truncate(user.introduction.presence || "自己紹介はまだありません。", length: 50) %>
              </p>

              <!-- フォローボタン -->
              <% unless current_user == user %>
                <% if current_user.following?(user) %>
                  <%= button_to 'フォロー解除', unfollow_user_path(user),
                        method: :delete,
                        class: "btn btn-sm btn-outline-danger w-100" %>
                <% else %>
                  <%= button_to 'フォロー', follow_user_path(user),
                        method: :post,
                        class: "btn btn-sm btn-outline-primary w-100" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center text-muted">
    <p class="lead mt-4">ユーザーが見つかりません。</p>
  </div>
<% end %>