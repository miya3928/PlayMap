<div class="container my-5 pt-5">
  <h2 class="mb-4 text-center">
    <i class="fas fa-users text-primary mr-2"></i> ユーザーリスト
  </h2>

  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-3 col-sm-6 mb-4">
        <div class="card h-100 text-center p-3 shadow-sm">
          
          <!-- プロフィール画像 -->
          <%= link_to user_path(user) do %>
            <%= display_image_or_default(user.image, classes: "rounded-circle mx-auto mb-3") %>
          <% end %>

          <!-- ユーザー名（リンク付き） -->
          <h6 class="mb-2">
            <%= link_to user.name, user_path(user), class: "font-weight-bold text-primary text-decoration-none" %>
          </h6>

          <!-- フォロー／フォロワー -->
          <div class="d-flex justify-content-center mb-3">
            <div class="mx-2">
              <%= link_to "#{user.following.count} フォロー", following_user_path(user), class: "text-secondary small" %>
            </div>
            <div class="mx-2">
              <%= link_to "#{user.followers.count} フォロワー", followers_user_path(user), class: "text-secondary small" %>
            </div>
          </div>

          <!-- 自己紹介 -->
          <p class="text-muted mb-1 small font-weight-bold">自己紹介</p>
          <p class="border rounded p-2 bg-light small">
            <%= user.introduction.presence || "自己紹介がまだ登録されていません。" %>
          </p>

          <!-- フォローボタン -->
          <% unless current_user == user %>
            <% if current_user.following?(user) %>
              <%= button_to 'フォロー解除', unfollow_user_path(user),
                    method: :delete, class: "btn btn-outline-danger btn-sm mt-2" %>
            <% else %>
              <%= button_to 'フォローする', follow_user_path(user),
                    method: :post, class: "btn btn-outline-primary btn-sm mt-2" %>
            <% end %>
          <% end %>

        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @users %>
  </div>
</div>